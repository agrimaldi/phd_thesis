journal = {Molecular and cellular endocrinology},
keywords = {Amphibians,Amphibians: growth \& development,Animals,Apoptosis,Humans,Metamorphosis, Biological,Models, Biological,Receptors, Thyroid Hormone,Receptors, Thyroid Hormone: genetics,Receptors, Thyroid Hormone: physiology,Thyroid Hormones,Thyroid Hormones: physiology},
